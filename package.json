{
  "name": "library",
  "version": "1.0.0",
  "description": "Simple library app for my girlfriend",
  "author": "Tom",
  "private": true,
  "main": "main.js",
  "prettier": "./prettierrc.json",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build": "NODE_ENV=production webpack --mode=production && NODE_ENV=production electron-builder -m --arm64",
    "watch": "webpack --watch"
  },
  "devDependencies": {
    "css-loader": "^7.1.2",
    "electron": "^30.1.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "^3.3.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.kiara.library",
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    },
    "dmg": {
      "sign": false
    },
    "directories": {
      "output": "dist"
    }
  }
}
